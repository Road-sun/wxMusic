/* pages/index/main/user/user.wxss */
page{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.main-body{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.user-bg{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 500rpx;
  background:url(http://pak6mqt97.bkt.clouddn.com/user-info.jpg);
  background-size: cover;
  justify-content: flex-end;
  /* padding-bottom: 100rpx;
  padding-left: 100rpx;
  box-sizing: border-box; */
}

.user-img{
  display: block;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  margin-left: 50rpx;
}

.user-nickname{
  color: white;
  font-size: 32rpx;
  margin-top: 30rpx;
  margin-left: 50rpx;
  margin-bottom: 50rpx;
}

.info-title{
  display: flex;
  width: 100%;
  height: 90rpx;
  align-items: center;
  background-color: white;
  border-top-left-radius:20rpx;
  border-top-right-radius: 20rpx; 
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
  box-sizing:border-box;
  padding-left: 20rpx;
  font-size: 34rpx ;
}

.user-info{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 30rpx 0;
}

.user-title{
  font-size: 32rpx;
  padding-left: 50rpx;
  line-height: 70rpx;
}

.user-sex{
  font-size: 32rpx;
  color: gray;
  padding-left: 50rpx;
  line-height: 50rpx;
}