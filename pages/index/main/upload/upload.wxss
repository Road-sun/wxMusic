/* pages/index/main/upload/upload.wxss */
page{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.video-title{
  display: flex;
  width: 100%;
  height: 100rpx;
  background: #FF3030;
  color: white;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
  font-size: 40rpx;
  justify-content: space-between
}

.video-show{
  display: block;
  width: 300rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.video-input{
  display: block;
  width: 100%;
  height:250rpx;
  padding: 20rpx;
  box-sizing: border-box
}

.video-bt{
  display: flex;
  width: 100%;
  height: 90rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-top: 1rpx solid rgba(240, 240, 240, 0.85);
}

.sub-bt{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 75%;
  border-radius: 15rpx;
  background-color: #bb1c1c;
  font-size: 35rpx;
}

.sub-bt-2{
  background: white;
  color:#FF3030;
  border: 1rpx solid #bb1c1c;
}

