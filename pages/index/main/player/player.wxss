/* pages/index/main/player/player.wxss */
page{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: rgba(35, 35, 35, 0.95);
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.music-info{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  height: 120rpx;
  border-bottom: 0.1rpx solid grey ;
  box-sizing: border-box;
  padding:0 30rpx; 
}

.music-name{
  display: block;
  color: white;
  font-size: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}

.music-author{
  display: block;
  color: gray;
  font-size: 27rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}

.music-animation{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 60%;
}

.music-lyric{
  display: flex;
  width: 100%;
  height: 84%;
  justify-content: center;
  align-items: center;
  color: rgba(182, 182, 182, 0.411);
}

.lyric-lineHeight{
  color: white
}

.lyric-word{
  text-align: center;
  box-sizing: border-box;
  padding: 5rpx 50rpx ;
}

.music-img{
  display: block;
  border-radius: 50%;
  width: 500rpx;
  height: 500rpx;
  -webkit-box-shadow:0px 0px 20px #FFFFFF;
  box-shadow:0px 0px 20px #FFFFFF;
  animation: imgRotate 20s linear infinite;
}

.pause-play{
  animation-play-state: paused;
}

.continue-play{
  animation-play-state:	running;
}

@keyframes imgRotate
{
    from {transform:rotate(0);}
    to {transform:rotate(360deg);}
}

.music-progress{
 display:flex;
 justify-content: center;
 width: 100%;
 align-items: center;
 margin-top: 80rpx;
}

.time-slider{
  width: 65%;
}

.time-style{
  color: white;
  font-size: 25rpx;
}

.music-controller{
  display: flex;
  width: 100%;
  height: 200rpx;
  align-items: center;
  justify-content: center;
}

.up-icon{
  margin-top: -10rpx;
}