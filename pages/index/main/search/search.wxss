/* pages/index/main/search/search.wxss */
.tap-color{
  background-color: rgba(240, 240, 240, 0.85);
}

page{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}

.search{
  display: flex;
  justify-content: center;
  height: 0;
  flex-grow: 0.8;
  background-color: red;
  align-items: center;
}

.search-input{
  width: 85%;
  /* height: 80rpx; */
  border-bottom:1rpx solid white; 
  color: white ;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 45rpx;
}

.search-icon{
  color: white;
  font-weight: 600;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.close-search{
  display: none
}

.hot-search{
  /* display: flex; */
  /* flex-wrap: wrap; */
  width: 100%;
  line-height: 100rpx;
  height: 0;
  flex-grow: 9.2;
}

.hot-search-title{
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 110rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 35rpx;
  color: gray
}

.select-song{
  display: flex;
  box-sizing: border-box;
  padding-left: 50rpx; 
}
.select-bt{
  margin: 0 20rpx;
}

.hot-search-box{
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 50rpx;
  border: 1rpx solid grey;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.search-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 0;
  flex-grow: 9.2;
}

.search-list{
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
}

.music-info{
  display: flex;
  flex-direction: column;
  width: 0;
  flex-grow: 8;
  height: 100%;
  box-sizing:border-box;
  padding-left: 20rpx; 
}

.music-name{
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}

.music-author{
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: grey;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.list-more{
  display: flex;
  flex-grow: 1;
  justify-content: center;
  width: 0;
  height: 100%;
  font-size: 50rpx;
  align-items: center;
  color: grey;
}

