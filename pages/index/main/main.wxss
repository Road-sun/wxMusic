.search-list {
  display: flex;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
}

.music-list-info {
  display: flex;
  flex-direction: column;
  width: 0;
  flex-grow: 8;
  height: 100%;
  box-sizing: border-box;
  padding-left: 20rpx;
}

.music-list-name {
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.music-list-author {
  display: block;
  width: 100%;
  height: 50rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: grey;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list-more {
  display: flex;
  flex-grow: 1;
  justify-content: center;
