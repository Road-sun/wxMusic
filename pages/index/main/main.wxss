/* pages/index/main/main.wxss */

page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.color-zan::before{
  color: red
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tap-color {
  background-color: rgba(240, 240, 240, 0.85);
}

.main-body {
  display: flex;
  width: 100%;
  height: 100%;
  position: relative;
}

.main-left {
  position: absolute;
  display: block;
  width: 75%;
  height: 100%;
  transform: translate(-100%, 0%);
  -webkit-transform: translate(-100%, 0%);
  background-color: rgba(225, 225, 225, 0.91);
}

.main-sidle {
  transition: transform 0.3s;
  transform: translate(0%, 0%);
  -webkit-transform: translate(0%, 0%);
}

.t-time {
  transition: transform 0.3s;
}

.user-info {
  display: flex;
  width: 100%;
  height: 350rpx;
  background: url(http://pak6mqt97.bkt.clouddn.com/user-info.jpg);
  background-size: cover;
  align-items: center;
  transition: width 0.3s;
}

.user-img {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 50rpx;
}

.user-name {
  display: flex;
  color: white;
  padding: 0 40rpx;
}

.first-option {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
}

.list-option {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.contact-bt {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  border: none;
  border-radius: 0;
  font-size: 30rpx;
  background: white;
  padding: 0;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.contact-bt:after {
  border: 0px;
}

.icon-block {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
  color: rgba(172, 172, 172, 0.91);
}

.main-right {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  z-index: 0;
  align-items: center;
}

.c-state {
  position: absolute;
  transition: transform 0.3s;
  transform: translate(75%, 0%);
  -webkit-transform: translate(75%, 0%);
}

.x-state {
  position: absolute;
  transition: transform 0.3s;
  transform: translate(0%, 0%);
  -webkit-transform: translate(0%, 0%);
}

.shade-cunceal {
  display: none;
}

.shade {
  display: block;
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(9, 9, 9, 0.7);
}

.main-title {
  display: flex;
  height: 9%;
  width: 100%;
  background-color: red;
  color: white;
  font-weight: 600;
  justify-content: space-between;
}

.main-more {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.main-tab {
  display: flex;
  align-items: center;
  font-weight: 500;
  color: rgba(246, 246, 246, 0.67);
}

.main-tab text {
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 30rpx;
  line-height: 70rpx;
}

.main-tab-is {
  color: white;
}

.main-search {
  display: flex;
  align-items: center;
  padding-right: 30rpx;
}

.main-swiper {
  width: 100%;
  height: 80%;
  box-sizing: border-box;
  background-color: rgba(225, 225, 225, 0.91);
}

.cus-audio {
  display: flex;
  position: fixed;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  justify-content: center;
  align-items: center;
}

.audio-player {
  display: flex;
  width: 100%;
  height: 100%;
}

.progress {
  width: 100%;
}

.music-cover {
  display: flex;
  width: 0;
  flex-grow: 1;
  align-items: center;
  justify-content: center;
}

.cover-img {
  display: block;
  width: 95rpx;
  height: 95rpx;
  border-radius: 10rpx;
}

.music-info {
  display: flex;
  flex-direction: column;
  width: 0;
  flex-grow: 3;
}

.music-info-name {
  display: block;
  height: 50%;
  font-size: 32rpx;
  line-height: 85rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.music-info-author {
  display: block;
  height: 50%;
  line-height: 35rpx;
  font-size: 25rpx;
  color: grey;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.music-play {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 0;
  flex-grow: 1;
}

.item-one {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: white;
}

.item-one-list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item-one-list view {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 31rpx;
}

.item-list-icon {
  display: block;
  height: 65rpx;
  width: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: red;
  font-size: 55rpx;
  margin-right: 25rpx;
}

.second-body {
  width: 100%;
  height: 100%;
  z-index: 0;
  /* overflow-y: scroll */
}

.video-card {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
  align-items: center;
  background: white;
  margin-bottom: 12rpx;
}

.video-img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 99.5%;
  height: 400rpx;
  border-radius: 8rpx;
}

.video-img image{
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.video-title {
  display: block;
  width: 99%;
  height: 95rpx;
  line-height: 95rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.video-info {
  display: flex;
  width: 99%;
  height: 100rpx;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 32rpx;
}

.card-user-info {
  display: flex;
  height: 100%;
  align-items: center;
  color: 26rpx;
  width: 38%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}

.card-user-info image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.card-user-good {
  display: flex;
  height: 100%;
  align-items: center;
  font-size: 24rpx;
  color: grey;
  margin-left: 170rpx;
}

.card-user-more {
  display: flex;
  height: 100%;
  align-items: center;
  width: 70rpx;
  margin-left: 30rpx;
  justify-content: center;
}

.third-all {
  width: 100%;
  height: 100%;
}

.third-body {
  display: flex;
  justify-content: center;
  background-image: -webkit-gradient(linear, 0% 0%, 0% 84%, from(#f00), to(#fff), color-stop(0.4, #f00));
  width: 100%;
  height: 300rpx;
  align-items: flex-end;
}

.third-swiper-img {
  display: block;
  width: 95%;
  height: 95%;
  border-radius: 10rpx;
}

.third-back-img {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 10rpx;
}

.third-main {
  display: block;
  width: 100%;
  /* height: 800rpx; */
  background: white;
}

.third-list-bt {
  display: flex;
  width: 100%;
  height: 200rpx;
  padding-top: 25rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.85);
}

.list-bt-box {
  display: flex;
  flex-direction: column;
  width: 0;
  height: 100%;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
}

.bt-box-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background-color: red;
  width: 53%;
  height: 53%;
  border-radius: 50%;
  -webkit-box-shadow: 0px 0px 20px #ffa1a1;
  box-shadow: 0px 0px 20px #ffa1a1;
}

.bt-box-text {
  line-height: 60rpx;
  font-size: 29rpx;
}

.album-tips{
  display: flex;
  height: 85rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
  align-items: center;
  font-size: 40rpx;
}

.album-list{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.album-box{
  display: flex;
  flex-direction:column; 
  width: 32.5%;
}

.album-cover{
  display: flex;
  width: 100%;
  height: 225rpx;
  background-color: red;
  border-radius: 5rpx;
  justify-content: flex-end
}

.album-play-num{
  font-size: 25rpx;
  color: white;
  padding-right: 10rpx;
  padding-top: 5rpx;
  font-weight: 300
}

.album-title{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  font-size: 28rpx;
}


.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}

